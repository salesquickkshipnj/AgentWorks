---
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <script src="https://unpkg.com/@phosphor-icons/web"></script>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "LogicLoom Systems",
        "image": "https://www.logicloomsystems.com/og-image.png",
        "@id": "https://www.logicloomsystems.com",
        "url": "https://www.logicloomsystems.com",
        "telephone": "", 
        "priceRange": "$$$",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "New Jersey", 
          "addressCountry": "US"
        },
        "sameAs": [
          "https://www.linkedin.com/company/logicloom-systems",
          "https://github.com/logicloomsystems"
        ],
        "description": "Enterprise-grade workflow automation and AI implementation."
      }
    </script>
  </head>
  
  <body class="bg-white font-sans text-slate-900 antialiased" x-data="{ mobileMenuOpen: false, modalOpen: false }">
    
    <nav class="fixed w-full z-50 transition-all duration-300 bg-white/80 backdrop-blur-md border-b border-gray-100">
      <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
        
        <a href="/" class="flex items-center gap-2 group">
          <div class="w-8 h-8 bg-slate-900 rounded-lg flex items-center justify-center group-hover:rotate-180 transition-transform duration-500">
             <i class="ph-bold ph-brackets-curly text-white text-lg"></i>
          </div>
          <span class="font-display font-bold text-xl tracking-tight text-slate-900">LogicLoom</span>
        </a>

        <div class="hidden md:flex items-center gap-8">
          <a href="/#process" class="text-sm font-medium text-gray-600 hover:text-slate-900 transition-colors">Protocol</a>
          
          <div class="relative group h-full flex items-center">
             <button class="text-sm font-medium text-gray-600 hover:text-slate-900 flex items-center gap-1">
                Solutions <i class="ph-bold ph-caret-down"></i>
             </button>
             <div class="absolute top-12 left-1/2 -translate-x-1/2 w-64 bg-white border border-gray-100 rounded-xl shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 p-2 transform translate-y-2 group-hover:translate-y-0">
                <a href="/industries/roofing-automation" class="block px-4 py-3 rounded-lg hover:bg-gray-50 text-sm font-medium text-gray-700">Roofing & Trades</a>
                <a href="/industries/dental-automation" class="block px-4 py-3 rounded-lg hover:bg-gray-50 text-sm font-medium text-gray-700">Dental Practices</a>
                <a href="/industries/real-estate-ai" class="block px-4 py-3 rounded-lg hover:bg-gray-50 text-sm font-medium text-gray-700">Real Estate</a>
                <a href="/industries/legal-automation" class="block px-4 py-3 rounded-lg hover:bg-gray-50 text-sm font-medium text-gray-700">Law Firms</a>
             </div>
          </div>

          <a href="/#case-studies" class="text-sm font-medium text-gray-600 hover:text-slate-900 transition-colors">Results</a>
        </div>

        <div class="flex items-center gap-4">
           <button @click="modalOpen = true" class="hidden md:block bg-slate-900 text-white text-sm font-bold px-6 py-2.5 rounded-full hover:bg-slate-800 transition-all shadow-lg active:scale-95 cursor-pointer">
              Book Discovery
           </button>
           
           <button @click="mobileMenuOpen = !mobileMenuOpen" class="md:hidden text-2xl text-slate-900">
              <i class="ph" :class="mobileMenuOpen ? 'ph-x' : 'ph-list'"></i>
           </button>
        </div>
      </div>

      <div x-show="mobileMenuOpen" 
           style="display: none;"
           x-transition
           class="absolute top-20 left-0 w-full bg-white border-b border-gray-200 p-6 md:hidden shadow-xl h-[85vh] overflow-y-auto z-40" 
           @click.outside="mobileMenuOpen = false">
           <div class="space-y-6">
                <div class="space-y-4 pb-4 border-b border-gray-100">
                    <a href="/#process" @click="mobileMenuOpen = false" class="block text-lg font-bold text-slate-900">The Protocol</a>
                    <a href="/#case-studies" @click="mobileMenuOpen = false" class="block text-lg font-bold text-slate-900">Results</a>
                </div>

                <div>
                    <span class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-3 block">Industries</span>
                    <div class="space-y-3 pl-2">
                        <a href="/industries/roofing-automation" class="block text-base font-medium text-gray-600">Roofing & Trades</a>
                        <a href="/industries/dental-automation" class="block text-base font-medium text-gray-600">Dental Practices</a>
                        <a href="/industries/real-estate-ai" class="block text-base font-medium text-gray-600">Real Estate</a>
                        <a href="/industries/legal-automation" class="block text-base font-medium text-gray-600">Law Firms</a>
                    </div>
                </div>

                <div class="pt-4">
                    <button @click="mobileMenuOpen = false; modalOpen = true" class="w-full bg-slate-900 text-white text-lg py-4 rounded-xl font-bold cursor-pointer shadow-lg active:scale-95 transition-transform">
                        Start Project
                    </button>
                </div>
           </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="bg-slate-900 text-white py-12 border-t border-slate-800">
       <div class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-8">
          <div class="text-center md:text-left">
             <div class="flex items-center justify-center md:justify-start gap-2 mb-4">
                <i class="ph-bold ph-brackets-curly text-xl"></i>
                <span class="font-display font-bold text-xl">LogicLoom</span>
             </div>
             <p class="text-slate-400 text-sm">Automating the American workforce, one workflow at a time.</p>
          </div>
          <div class="flex gap-6 text-sm text-slate-400">
             <a href="#" class="hover:text-white transition-colors">Privacy</a>
             <a href="#" class="hover:text-white transition-colors">Terms</a>
             <a href="https://github.com/logicloomsystems" class="hover:text-white transition-colors">GitHub</a>
          </div>
       </div>
    </footer>

    <div 
        x-show="modalOpen" 
        style="display: none;"
        class="fixed inset-0 z-[60] flex items-center justify-center p-4 px-4"
    >
        <div class="absolute inset-0 bg-slate-900/60 backdrop-blur-sm" @click="modalOpen = false"></div>
        <div class="relative w-full max-w-4xl h-[80vh] bg-white rounded-2xl shadow-2xl overflow-hidden animate-fade-in">
            <button @click="modalOpen = false" class="absolute top-4 right-4 z-10 w-8 h-8 bg-white rounded-full flex items-center justify-center text-slate-900 hover:bg-gray-100 cursor-pointer">
                <i class="ph-bold ph-x"></i>
            </button>
            
            <template x-if="modalOpen">
                <iframe 
                  src="https://cal.com/logicloomsystems-cal/15min?embed=true" 
                  style="width:100%;height:100%;border:none;"
                  title="Book a call"
                  loading="lazy"
                ></iframe>
            </template>
        </div>
    </div>

  </body>
</html>