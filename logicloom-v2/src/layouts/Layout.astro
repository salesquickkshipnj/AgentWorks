---
import "../styles/global.css";
import Schema from "../components/seo/Schema.astro"; // Import the new component

interface Props {
  title: string;
  description: string;
  image?: string;
}

const { 
  title, 
  description, 
  image = "https://www.logicloomsystems.com/og-default.png" // Absolute URL is better for SEO
} = Astro.props;

const currentUrl = Astro.url.href;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={currentUrl} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <script src="https://unpkg.com/@phosphor-icons/web" defer></script>
    
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "LogicLoom Systems",
  "image": "https://www.logicloomsystems.com/og-image.png",
  "@id": "https://www.logicloomsystems.com",
  "url": "https://www.logicloomsystems.com",
  "telephone": "", 
  "priceRange": "$$$",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "New Jersey", 
    "addressCountry": "US"
  },
  "sameAs": [
    "https://www.linkedin.com/company/logicloom-systems",
    "https://github.com/logicloomsystems"
  ],
  "openingHoursSpecification": {
    "@type": "OpeningHoursSpecification",
    "dayOfWeek": [
      "Monday", "Tuesday", "Wednesday", "Thursday", "Friday"
    ],
    "opens": "09:00",
    "closes": "17:00"
  },
  "description": "Enterprise-grade workflow automation and AI implementation for legal, real estate, and construction sectors."
}
</script>

    <style>
      .glass-nav {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(0,0,0,0.06);
      }
      .bg-grid-slate {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(15 23 42 / 0.04)'%3e%3cpath d='M0 .5H31.5V32'/%3e%3c/svg%3e");
      }
      [x-cloak] { display: none !important; }
      
      /* Custom Scrollbar */
      ::-webkit-scrollbar { width: 8px; }
      ::-webkit-scrollbar-track { background: #f1f1f1; }
      ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 4px; }
      ::-webkit-scrollbar-thumb:hover { background: #94a3b8; }
    </style>

<Schema title={title} description={description} image={image} url={currentUrl} />

  </head>
  
  <body 
    class="bg-[#F5F5F7] text-slate-900 antialiased font-sans" 
    x-data="{ mobileMenuOpen: false, modalOpen: false, solutionsOpen: false }"
    @open-modal.window="modalOpen = true"
    @keydown.escape.window="modalOpen = false"
  >
    
    <div class="fixed inset-0 z-0 pointer-events-none bg-grid-slate [mask-image:linear-gradient(to_bottom,transparent,black)]"></div>

    <nav class="fixed w-full z-50 top-0 transition-all duration-300 glass-nav">
      <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
        
        <a href="/" class="flex items-center gap-3 group focus:outline-none rounded-lg p-1 z-50 relative">
            <div class="relative w-auto h-10">
              <svg viewBox="0 0 500 200" fill="none" xmlns="http://www.w3.org/2000/svg" class="h-full w-auto">
                <g stroke="#94A3B8" stroke-width="2" stroke-opacity="0.5" fill="none" stroke-linecap="round">
                  <path d="M50 135 L80 143 L110 157 L140 165 L170 158 L200 144" />
                  <path d="M50 102 L80 110 L110 124 L140 132 L170 125 L200 111" />
                  <path d="M50 69 L80 77 L110 91 L140 99 L170 92 L200 78" />
                  <path d="M50 36 L80 44 L110 58 L140 66 L170 59 L200 45" />
                  <path d="M50 135 L50 36" />
                  <path d="M80 143 L80 44" />
                  <path d="M110 157 L110 58" />
                  <path d="M140 165 L140 66" />
                  <path d="M170 158 L170 59" />
                  <path d="M200 144 L200 45" />
                </g>
                <g fill="#1E293B"> <circle cx="50" cy="135" r="5" /> <circle cx="50" cy="102" r="5" /> <circle cx="50" cy="69" r="5" /> <circle cx="50" cy="36" r="5" /> </g>
                <g fill="#18375C"> <circle cx="80" cy="143" r="5" /> <circle cx="80" cy="110" r="5" /> <circle cx="80" cy="77" r="5" /> <circle cx="80" cy="44" r="5" /> </g>
                <g fill="#12467D"> <circle cx="110" cy="157" r="5" /> <circle cx="110" cy="124" r="5" /> <circle cx="110" cy="91" r="5" /> <circle cx="110" cy="58" r="5" /> </g>
                <g fill="#0C549F"> <circle cx="140" cy="165" r="5" /> <circle cx="140" cy="132" r="5" /> <circle cx="140" cy="99" r="5" /> <circle cx="140" cy="66" r="5" /> </g>
                <g fill="#0663C0"> <circle cx="170" cy="158" r="5" /> <circle cx="170" cy="125" r="5" /> <circle cx="170" cy="92" r="5" /> <circle cx="170" cy="59" r="5" /> </g>
                <g fill="#0071E3"> <circle cx="200" cy="144" r="5" /> <circle cx="200" cy="111" r="5" /> <circle cx="200" cy="78" r="5" /> <circle cx="200" cy="45" r="5" /> </g>
                <text x="230" y="110" font-family="'Space Grotesk', sans-serif" font-weight="bold" font-size="40" fill="#1E293B">LogicLoom</text>
                <text x="232" y="138" font-family="'Space Grotesk', sans-serif" font-weight="500" font-size="14" letter-spacing="1.5" fill="#64748B">SYSTEMS</text>
                <line x1="232" y1="148" x2="300" y2="148" stroke="#0071E3" stroke-width="2" />
              </svg>
            </div>
        </a>

        <div class="hidden md:flex items-center space-x-1">
          
          <div class="relative" @click.outside="solutionsOpen = false">
                <button @click="solutionsOpen = !solutionsOpen" class="flex items-center gap-1 text-sm font-medium text-gray-600 hover:text-black hover:bg-gray-100 px-4 py-2 rounded-full transition-all group cursor-pointer">
                    Solutions <i class="ph ph-caret-down text-xs text-gray-400 group-hover:text-black transition-colors" :class="{'rotate-180': solutionsOpen}"></i>
                </button>
                <div x-show="solutionsOpen" 
                     x-transition:enter="transition ease-out duration-200"
                     x-transition:enter-start="opacity-0 translate-y-2"
                     x-transition:enter-end="opacity-100 translate-y-0"
                     style="display: none;" 
                     class="absolute top-full left-1/2 -translate-x-1/2 mt-4 w-[600px] bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden p-6 grid grid-cols-2 gap-8 z-50">
                    <div>
                        <span class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-4 block">By Industry</span>
                        <div class="space-y-2">
                            <a href="/industries/roofing-automation" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group"><div class="w-8 h-8 rounded-lg bg-orange-50 text-orange-600 flex items-center justify-center"><i class="ph ph-house-line"></i></div><div><p class="text-sm font-bold text-slate-900">Roofing & Trades</p></div></a>
                            <a href="/industries/dental-automation" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group"><div class="w-8 h-8 rounded-lg bg-teal-50 text-teal-600 flex items-center justify-center"><i class="ph ph-tooth"></i></div><div><p class="text-sm font-bold text-slate-900">Dental Practices</p></div></a>
                            <a href="/industries/real-estate-ai" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group"><div class="w-8 h-8 rounded-lg bg-emerald-50 text-emerald-600 flex items-center justify-center"><i class="ph ph-buildings"></i></div><div><p class="text-sm font-bold text-slate-900">Real Estate</p></div></a>
                            <a href="/industries/legal-automation" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group"><div class="w-8 h-8 rounded-lg bg-amber-50 text-amber-600 flex items-center justify-center"><i class="ph ph-gavel"></i></div><div><p class="text-sm font-bold text-slate-900">Law Firms</p></div></a>
                        </div>
                    </div>
                    <div>
                        <span class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-4 block">By Workflow</span>
                        <div class="space-y-2">
                             <a href="/use-cases/lead-to-crm" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group"><div class="w-8 h-8 rounded-lg bg-indigo-50 text-indigo-600 flex items-center justify-center"><i class="ph ph-lightning"></i></div><div><p class="text-sm font-bold text-slate-900">Lead-to-CRM</p></div></a>
                             <a href="/use-cases/inbox-triage" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group"><div class="w-8 h-8 rounded-lg bg-sky-50 text-sky-600 flex items-center justify-center"><i class="ph ph-envelope-open"></i></div><div><p class="text-sm font-bold text-slate-900">Inbox Triage</p></div></a>
                             <a href="/migrations/zapier-to-n8n" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group"><div class="w-8 h-8 rounded-lg bg-orange-50 text-orange-600 flex items-center justify-center"><i class="ph ph-arrows-merge"></i></div><div><p class="text-sm font-bold text-slate-900">Zapier Migration</p></div></a>
                        </div>
                    </div>
                </div>
            </div>

            <a href="/n8n-services" class="text-sm font-medium text-gray-600 hover:text-black hover:bg-gray-100 px-4 py-2 rounded-full transition-all">n8n Experts</a>

            <div class="pl-4">
               <button @click="$dispatch('open-modal')" class="bg-black text-white text-xs px-5 py-2.5 rounded-full font-semibold hover:bg-gray-800 transition-transform active:scale-95 shadow-lg shadow-gray-200 cursor-pointer">
                Start Project
               </button>
            </div>
        </div>

        <button @click="mobileMenuOpen = !mobileMenuOpen" class="md:hidden text-slate-900 p-2 cursor-pointer">
            <i class="ph ph-list text-2xl"></i>
        </button>
      </div>

      <div x-show="mobileMenuOpen" 
           style="display: none;"
           x-transition
           class="absolute top-16 left-0 w-full bg-white border-b border-gray-200 p-6 md:hidden shadow-xl h-[85vh] overflow-y-auto z-40" 
           @click.outside="mobileMenuOpen = false">
           <div class="space-y-6">
                <div class="space-y-4 pb-4 border-b border-gray-100">
                    <a href="#process" @click="mobileMenuOpen = false" class="block text-lg font-bold text-slate-900">The Protocol</a>
                    <a href="#case-studies" @click="mobileMenuOpen = false" class="block text-lg font-bold text-slate-900">Results</a>
                </div>

                <div>
                    <span class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-3 block">Industries</span>
                    <div class="space-y-3 pl-2">
                        <a href="/industries/roofing-automation" class="block text-base font-medium text-gray-600">Roofing & Trades</a>
                        <a href="/industries/dental-automation" class="block text-base font-medium text-gray-600">Dental Practices</a>
                        <a href="/industries/real-estate-ai" class="block text-base font-medium text-gray-600">Real Estate</a>
                        <a href="/industries/legal-automation" class="block text-base font-medium text-gray-600">Law Firms</a>
                    </div>
                </div>

                <div>
                     <span class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-3 block">Use Cases</span>
                     <div class="space-y-3 pl-2">
                        <a href="/use-cases/lead-to-crm" class="block text-base font-medium text-gray-600">Lead-to-CRM</a>
                        <a href="/migrations/zapier-to-n8n" class="block text-base font-medium text-gray-600">Zapier Migration</a>
                     </div>
                </div>

                <div class="pt-4">
                    <button @click="mobileMenuOpen = false; $dispatch('open-modal')" class="w-full bg-slate-900 text-white text-lg py-4 rounded-xl font-bold cursor-pointer shadow-lg active:scale-95 transition-transform">
                        Start Project
                    </button>
                </div>
           </div>
      </div>

    </nav>

    <main>
      <slot /> 
    </main>

    <footer class="bg-white py-12 border-t border-gray-200 mt-20 relative z-10">
        <div class="max-w-4xl mx-auto text-center px-6">
            <p class="text-sm text-gray-500 mb-4">&copy; 2025 LogicLoom Systems.</p>
            <div class="flex justify-center gap-6 text-sm text-gray-400">
                <a href="/privacy" class="hover:text-black">Privacy</a>
                <a href="/terms" class="hover:text-black">Terms</a>
            </div>
        </div>
    </footer>

    <div 
      x-show="modalOpen" 
      style="display:none;"
      class="fixed inset-0 z-[100] flex items-center justify-center px-4" 
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0"
      x-transition:enter-end="opacity-100"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100"
      x-transition:leave-end="opacity-0"
    >
      <div @click="modalOpen = false" class="absolute inset-0 bg-slate-900/40 backdrop-blur-sm"></div>
      
      <div 
        class="relative bg-white w-full max-w-2xl rounded-2xl shadow-2xl overflow-hidden animate-slide-up h-[85vh] md:h-[700px]"
        @click.stop
      >
        <div class="flex justify-between items-center p-4 border-b border-gray-100 bg-gray-50">
            <h3 class="font-bold text-lg text-gray-900">Book Discovery Call</h3>
            <button @click="modalOpen = false" class="text-gray-400 hover:text-black cursor-pointer"><i class="ph ph-x text-xl"></i></button>
        </div>
        
        <div class="w-full h-full bg-white relative">
             <div class="absolute inset-0 flex items-center justify-center -z-10">
                <i class="ph ph-spinner animate-spin text-3xl text-gray-300"></i>
             </div>
             <iframe 
                src="https://cal.com/logicloomsystems-cal/15min?embed=true" 
                style="width:100%;height:100%;border:none;"
                title="Book a call"
             ></iframe>
        </div>
      </div>
    </div>

  </body>
</html>