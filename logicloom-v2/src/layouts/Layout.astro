        style="display: none;"
        class="fixed inset-0 z-[60] flex items-center justify-center p-4 px-4"
    >
        <div class="absolute inset-0 bg-slate-900/60 backdrop-blur-sm" @click="modalOpen = false"></div>
        <div class="relative w-full max-w-4xl h-[80vh] bg-white rounded-2xl shadow-2xl overflow-hidden animate-fade-in">
            <button @click="modalOpen = false" aria-label="Close Modal" class="absolute top-4 right-4 z-10 w-8 h-8 bg-white rounded-full flex items-center justify-center text-slate-900 hover:bg-gray-100 cursor-pointer">
               <Icon name="ph:x-bold" class="w-5 h-5" />
             </button>
            
            <template x-if="modalOpen">
                <iframe 
                  src="https://cal.com/logicloomsystems-cal?embed=true" 
                  style="width:100%;height:100%;border:none;"
                  title="Book a call"
                  loading="lazy"
                ></iframe>
            </template>
        </div>
    </div>

  </body>
</html>