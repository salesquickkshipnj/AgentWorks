---
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="h-full scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>n8n Workflow Architects & AI Automation US | LogicLoom Systems</title>
    <meta
      name="description"
      content="LogicLoom Systems architects enterprise-grade n8n automations and AI agents. We replace repetitive headcount with code. Based in Essex County, NJ, serving the US market."
    />

    <link rel="canonical" href="https://www.logicloomsystems.com/" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Space+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <script src="https://unpkg.com/@phosphor-icons/web" defer></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <script>
      // @ts-nocheck
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              sans: ["Inter", "sans-serif"],
              display: ["Space Grotesk", "sans-serif"],
            },
            colors: {
              ios: {
                bg: "#F5F5F7",
                card: "#FFFFFF",
                text: "#111827",
                blue: "#0071E3",
                blueHover: "#0077ED",
              },
            },
            backgroundImage: {
              "grid-slate":
                'url("data:image/svg+xml,%3csvg xmlns=\'http://www.w3.org/2000/svg\' viewBox=\'0 0 32 32\' width=\'32\' height=\'32\' fill=\'none\' stroke=\'rgb(15 23 42 / 0.04)\'%3e%3cpath d=\'M0 .5H31.5V32\'/%3e%3c/svg%3e")',
            },
            animation: {
              "fade-in": "fadeIn 0.6s ease-out forwards",
              "slide-up": "slideUp 0.8s ease-out forwards",
            },
            keyframes: {
              fadeIn: { "0%": { opacity: "0" }, "100%": { opacity: "1" } },
              slideUp: {
                "0%": { opacity: "0", transform: "translateY(10px)" },
                "100%": { opacity: "1", transform: "translateY(0)" },
              },
            },
          },
        },
      };
    </script>

    <style>
      /* Glass Nav Effect */
      .glass-nav {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(0, 0, 0, 0.06);
      }
      .cal-embed-dialog {
        z-index: 9999 !important;
      }
      [x-cloak] {
        display: none !important;
      }
    </style>
  </head>

  <body
    class="bg-ios-bg text-ios-text antialiased font-sans min-h-full selection:bg-ios-blue selection:text-white"
    x-data="siteApp()"
    x-init="init()"
  >
    <div
      class="fixed inset-0 z-0 pointer-events-none bg-grid-slate [mask-image:linear-gradient(to_bottom,transparent,black)]"
    >
    </div>

    <nav class="fixed w-full z-50 top-0 transition-all duration-300 glass-nav">
      <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
        <a href="#top" class="flex items-center gap-3 group focus:outline-none rounded-lg p-1">
          <div class="relative w-auto h-10">
            <svg
              viewBox="0 0 500 200"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              class="h-full w-auto"
              aria-label="LogicLoom Systems logo"
            >
              <g stroke="#94A3B8" stroke-width="2" stroke-opacity="0.5" fill="none" stroke-linecap="round">
                <path d="M50 135 L80 143 L110 157 L140 165 L170 158 L200 144"></path>
                <path d="M50 102 L80 110 L110 124 L140 132 L170 125 L200 111"></path>
                <path d="M50 69 L80 77 L110 91 L140 99 L170 92 L200 78"></path>
                <path d="M50 36 L80 44 L110 58 L140 66 L170 59 L200 45"></path>
                <path d="M50 135 L50 36"></path>
                <path d="M80 143 L80 44"></path>
                <path d="M110 157 L110 58"></path>
                <path d="M140 165 L140 66"></path>
                <path d="M170 158 L170 59"></path>
                <path d="M200 144 L200 45"></path>
              </g>
              <g fill="#1E293B">
                <circle cx="50" cy="135" r="5"></circle> <circle cx="50" cy="102" r="5"></circle>
                <circle cx="50" cy="69" r="5"></circle> <circle cx="50" cy="36" r="5"></circle>
              </g>
              <g fill="#18375C">
                <circle cx="80" cy="143" r="5"></circle> <circle cx="80" cy="110" r="5"></circle>
                <circle cx="80" cy="77" r="5"></circle> <circle cx="80" cy="44" r="5"></circle>
              </g>
              <g fill="#12467D">
                <circle cx="110" cy="157" r="5"></circle> <circle cx="110" cy="124" r="5"></circle>
                <circle cx="110" cy="91" r="5"></circle> <circle cx="110" cy="58" r="5"></circle>
              </g>
              <g fill="#0C549F">
                <circle cx="140" cy="165" r="5"></circle> <circle cx="140" cy="132" r="5"></circle>
                <circle cx="140" cy="99" r="5"></circle> <circle cx="140" cy="66" r="5"></circle>
              </g>
              <g fill="#0663C0">
                <circle cx="170" cy="158" r="5"></circle> <circle cx="170" cy="125" r="5"></circle>
                <circle cx="170" cy="92" r="5"></circle> <circle cx="170" cy="59" r="5"></circle>
              </g>
              <g fill="#0071E3">
                <circle cx="200" cy="144" r="5"></circle> <circle cx="200" cy="111" r="5"></circle>
                <circle cx="200" cy="78" r="5"></circle> <circle cx="200" cy="45" r="5"></circle>
              </g>
              <text x="230" y="110" font-family="'Space Grotesk', sans-serif" font-weight="bold" font-size="40" fill="#1E293B">LogicLoom</text>
              <text x="232" y="138" font-family="'Space Grotesk', sans-serif" font-weight="500" font-size="14" letter-spacing="1.5" fill="#64748B">SYSTEMS</text>
              <line x1="232" y1="148" x2="300" y2="148" stroke="#0071E3" stroke-width="2"></line>
            </svg>
          </div>
        </a>

        <div class="hidden md:flex items-center space-x-8 text-sm font-medium text-gray-600">
          <a href="/migrations/zapier-to-n8n" class="text-ios-blue font-semibold hover:text-black transition-colors">n8n Architecture</a>
          <a href="#capabilities" class="hover:text-black transition-colors">Capabilities</a>
          <a href="#process" class="hover:text-black transition-colors">Protocol</a>
          
          <div class="relative group h-16 flex items-center">
             <button class="hover:text-black transition-colors flex items-center gap-1">
                 Industries <i class="ph ph-caret-down"></i>
             </button>
             <div class="absolute top-12 left-0 w-56 bg-white border border-gray-100 shadow-xl rounded-xl p-2 hidden group-hover:block z-[60]">
                 <a href="/industries/roofing-automation" class="block px-4 py-2 text-sm text-gray-600 hover:bg-gray-50 rounded-lg">Roofing</a>
                 <a href="/industries/legal-automation" class="block px-4 py-2 text-sm text-gray-600 hover:bg-gray-50 rounded-lg">Legal</a>
                 <a href="/industries/dental-automation" class="block px-4 py-2 text-sm text-gray-600 hover:bg-gray-50 rounded-lg">Dental</a>
                 <a href="/industries/real-estate-ai" class="block px-4 py-2 text-sm text-gray-600 hover:bg-gray-50 rounded-lg">Real Estate</a>
             </div>
          </div>

          <button
            @click="openModal($event)"
            class="bg-black text-white text-xs px-5 py-2.5 rounded-full font-semibold hover:bg-gray-800 transition-transform active:scale-95 shadow-lg shadow-gray-200"
          >
            Start Project
          </button>
        </div>
      </div>
    </nav>

    <section id="top" class="relative pt-40 pb-16 md:pt-48 md:pb-20 px-6 overflow-hidden z-10">
      <div class="max-w-5xl mx-auto text-center relative z-10">
        <div
          class="animate-fade-in inline-flex items-center gap-2 mb-8 px-4 py-1.5 rounded-full border border-gray-200 bg-white/60 backdrop-blur-sm shadow-sm"
        >
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
          </span>
          <span class="text-xs font-semibold text-gray-600 uppercase tracking-widest">Accepting New Builds for Q1 2026</span>
        </div>

        <h1 class="animate-slide-up font-display text-5xl md:text-7xl font-bold tracking-tight text-slate-900 mb-6 leading-[1.05]">
          We Build the AI Workforce <br />
          <span class="text-gray-400">That Never Sleeps.</span>
        </h1>

        <p
          class="animate-slide-up text-lg md:text-xl text-gray-500 font-normal max-w-2xl mx-auto mb-10 leading-relaxed"
          style="animation-delay: 0.1s;"
        >
          Stop hiring for repetitive tasks. We architect self-hosted <span class="text-gray-900 font-medium">n8n workflows</span> and custom agents that run your operations securely, 24/7.
        </p>

        <div class="animate-slide-up flex flex-col md:flex-row items-center justify-center gap-4" style="animation-delay: 0.2s;">
          <a
            href="#contact"
            class="bg-ios-blue text-white text-base px-8 py-4 rounded-full font-medium hover:bg-ios-blueHover transition-all shadow-xl shadow-blue-500/20 active:scale-95 flex items-center gap-2 w-full md:w-auto justify-center"
          >
            Analyze My Workflow
            <i class="ph ph-arrow-down" aria-hidden="true"></i>
          </a>

          <button
            @click="openModal($event)"
            class="bg-white text-slate-700 border border-gray-200 text-base px-8 py-4 rounded-full font-medium hover:bg-gray-50 transition-all active:scale-95 w-full md:w-auto"
          >
            Book Discovery
          </button>
        </div>

        <div class="animate-slide-up mt-16 pt-8 border-t border-gray-200/60" style="animation-delay: 0.3s;">
          <p class="text-xs font-semibold text-gray-400 uppercase tracking-widest mb-6">Enterprise-Grade Stack</p>
          <div class="flex flex-wrap justify-center items-center gap-8 md:gap-14 opacity-50 grayscale hover:grayscale-0 transition-all duration-700">
            <div class="flex items-center gap-2 font-display font-bold text-xl text-slate-700"><i class="ph ph-lightning-fill text-orange-500"></i> n8n</div>
            <div class="flex items-center gap-2 font-display font-bold text-xl text-slate-700"><i class="ph ph-brain-fill text-green-600"></i> OpenAI</div>
            <div class="flex items-center gap-2 font-display font-bold text-xl text-slate-700"><i class="ph ph-code text-yellow-500"></i> Python</div>
            <div class="flex items-center gap-2 font-display font-bold text-xl text-slate-700"><i class="ph ph-database text-blue-600"></i> PostgreSQL</div>
            <div class="flex items-center gap-2 font-display font-bold text-xl text-slate-700"><i class="ph ph-stripe-logo text-purple-600"></i> Stripe</div>
          </div>
        </div>
      </div>
    </section>

    <section id="capabilities" class="py-24 bg-white relative z-10 border-y border-gray-100">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-20">
          <h2 class="font-display text-3xl md:text-4xl font-bold tracking-tight mb-4 text-slate-900">The Automation Infrastructure</h2>
          <p class="text-gray-500 max-w-2xl mx-auto">
            We don't just "zap" things. We build resilient software architecture that handles thousands of operations without breaking.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="md:col-span-2 bg-ios-bg rounded-2xl p-10 relative overflow-hidden group hover:shadow-lg transition-all duration-500 border border-gray-100">
            <div class="relative z-10">
              <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center mb-6 shadow-sm border border-gray-100">
                <i class="ph ph-users-three text-2xl text-ios-blue" aria-hidden="true"></i>
              </div>
              <h3 class="font-display text-2xl font-bold mb-3">Customer Ops Agents</h3>
              <p class="text-gray-600 max-w-md leading-relaxed">
                Deploy AI agents that triage support tickets, draft email replies, update CRM records, and route complex queries to humans only when necessary.
              </p>
              <div class="mt-8 flex gap-3">
                <span class="text-xs font-mono bg-white border border-gray-200 px-2 py-1 rounded text-gray-500">GPT-4o</span>
                <span class="text-xs font-mono bg-white border border-gray-200 px-2 py-1 rounded text-gray-500">Anthropic</span>
              </div>
            </div>
            <div class="absolute right-[-20px] bottom-[-20px] w-64 h-48 bg-white rounded-xl border border-gray-200 shadow-sm p-4 flex flex-col gap-3 opacity-90 group-hover:translate-y-[-5px] transition-transform duration-500">
              <div class="flex items-center gap-2 border-b border-gray-100 pb-2">
                <div class="w-2 h-2 rounded-full bg-green-500"></div>
                <span class="text-[10px] text-gray-400 font-mono">Incoming Ticket #9201</span>
              </div>
              <div class="space-y-2">
                <div class="bg-gray-100 h-2 w-full rounded-full"></div>
                <div class="bg-blue-50 h-2 w-2/3 rounded-full"></div>
              </div>
            </div>
          </div>

          <div class="bg-ios-bg rounded-2xl p-10 hover:shadow-lg transition-all duration-500 border border-gray-100">
            <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center mb-6 shadow-sm border border-gray-100">
              <i class="ph ph-chart-polar text-2xl text-slate-800" aria-hidden="true"></i>
            </div>
            <h3 class="font-display text-xl font-bold mb-3">Data Orchestration</h3>
            <p class="text-gray-600 text-sm leading-relaxed">
              Unify data from fragmented tools. We build pipelines that pull from APIs, clean the data in Python/JS, and push to your dashboard or warehouse.
            </p>
          </div>

          <div class="bg-ios-bg rounded-2xl p-10 hover:shadow-lg transition-all duration-500 border border-gray-100">
            <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center mb-6 shadow-sm border border-gray-100">
              <i class="ph ph-plugs text-2xl text-purple-600" aria-hidden="true"></i>
            </div>
            <h3 class="font-display text-xl font-bold mb-3">Custom Integrations</h3>
            <p class="text-gray-600 text-sm leading-relaxed">
              Internal tool doesn't have a Zapier app? No problem. We write custom API wrappers and webhooks to connect the disconnectable.
            </p>
          </div>

          <div class="md:col-span-2 bg-slate-900 text-white rounded-2xl p-10 relative overflow-hidden group">
            <div class="relative z-10 flex flex-col md:flex-row md:items-center justify-between gap-6">
              <div class="max-w-lg">
                <h3 class="font-display text-2xl font-bold mb-2">The Architecture Audit</h3>
                <p class="text-gray-400">
                  Not sure what's possible? We map your current stack, identify high-friction bottlenecks, and calculate the ROI of automation before writing a single line of code.
                </p>
              </div>
              <button
                @click="openModal($event)"
                class="whitespace-nowrap bg-white text-slate-900 text-sm font-semibold rounded-full px-6 py-3 hover:bg-gray-100 transition-colors"
              >
                Start Audit Strategy
              </button>
            </div>
            <div class="absolute inset-0 bg-slate-800 opacity-20 mix-blend-soft-light"></div>
          </div>
        </div>
      </div>
    </section>

    <section id="process" class="py-24 relative overflow-hidden bg-ios-bg z-10">
      <div class="max-w-6xl mx-auto px-6 relative z-10">
        <div class="mb-16 md:text-center max-w-2xl mx-auto">
          <h2 class="font-display text-3xl font-bold tracking-tight mb-4">The LogicLoom Protocol</h2>
          <p class="text-gray-500">A rigorous engineering approach to business process automation.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 relative">
          <div class="hidden md:block absolute top-8 left-0 w-full h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent" aria-hidden="true"></div>

          <div class="relative group">
            <div class="w-16 h-16 bg-white border border-gray-200 rounded-2xl flex items-center justify-center text-xl font-bold shadow-sm mb-6 relative z-10 mx-auto md:mx-0 group-hover:border-ios-blue group-hover:text-ios-blue transition-colors">
              <span class="font-display">01</span>
            </div>
            <h3 class="font-display text-lg font-bold mb-2">Map & Measure</h3>
            <p class="text-sm text-gray-500 leading-relaxed">
              We audit your manual workflows step-by-step. We don't just ask "what do you do?"—we ask "why?" and identify where data breaks.
            </p>
          </div>

          <div class="relative group">
            <div class="w-16 h-16 bg-white border border-gray-200 rounded-2xl flex items-center justify-center text-xl font-bold shadow-sm mb-6 relative z-10 mx-auto md:mx-0 group-hover:border-ios-blue group-hover:text-ios-blue transition-colors">
              <span class="font-display">02</span>
            </div>
            <h3 class="font-display text-lg font-bold mb-2">Architect & Build</h3>
            <p class="text-sm text-gray-500 leading-relaxed">
              I build your agents using n8n and code. We implement error handling, logging, and fallback paths so your business doesn't crash on a bad API call.
            </p>
          </div>

          <div class="relative group">
            <div class="w-16 h-16 bg-white border border-gray-200 rounded-2xl flex items-center justify-center text-xl font-bold shadow-sm mb-6 relative z-10 mx-auto md:mx-0 group-hover:border-ios-blue group-hover:text-ios-blue transition-colors">
              <span class="font-display">03</span>
            </div>
            <h3 class="font-display text-lg font-bold mb-2">Deploy & Transfer</h3>
            <p class="text-sm text-gray-500 leading-relaxed">
              We deploy to your private server or cloud. You get full documentation and ownership of the source code. No vendor lock-in.
            </p>
          </div>
        </div>
      </div>
    </section>

    <section id="proof" class="py-20 bg-white border-t border-gray-100 relative z-10">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex flex-col md:flex-row md:items-end justify-between mb-12 gap-4">
          <div>
            <h2 class="font-display text-3xl font-bold tracking-tight mb-3">Efficiency Metrics</h2>
            <p class="text-gray-500 max-w-lg">Real outcomes from deployed architectures.</p>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-0 border border-gray-200 rounded-3xl overflow-hidden bg-white divide-y md:divide-y-0 md:divide-x divide-gray-200 shadow-sm">
          <div class="p-10 hover:bg-gray-50 transition-colors">
            <div class="flex items-center justify-between mb-6">
              <span class="text-xs font-bold font-mono text-gray-400 uppercase">Inbox Zero</span>
              <i class="ph ph-check-circle text-green-500 text-xl"></i>
            </div>
            <div class="font-display text-4xl font-bold text-slate-900 mb-2">8 hrs</div>
            <p class="text-sm text-gray-500">Saved weekly per employee by automating email triage and CRM entry.</p>
          </div>
          <div class="p-10 hover:bg-gray-50 transition-colors">
            <div class="flex items-center justify-between mb-6">
              <span class="text-xs font-bold font-mono text-gray-400 uppercase">Response Time</span>
              <i class="ph ph-lightning text-yellow-500 text-xl"></i>
            </div>
            <div class="font-display text-4xl font-bold text-slate-900 mb-2">2 min</div>
            <p class="text-sm text-gray-500">Average time to classify, route, and draft a response to inbound leads.</p>
          </div>
          <div class="p-10 hover:bg-gray-50 transition-colors">
            <div class="flex items-center justify-between mb-6">
              <span class="text-xs font-bold font-mono text-gray-400 uppercase">Error Rate</span>
              <i class="ph ph-trend-down text-blue-500 text-xl"></i>
            </div>
            <div class="font-display text-4xl font-bold text-slate-900 mb-2">~0%</div>
            <p class="text-sm text-gray-500">Reduction in data entry errors compared to manual copy/pasting.</p>
          </div>
        </div>
      </div>
    </section>

    <section id="contact" class="py-24 bg-ios-bg border-t border-gray-200 relative z-10">
      <div class="max-w-3xl mx-auto px-6">
        <div class="text-center mb-10">
          <h2 class="font-display text-3xl font-bold tracking-tight mb-2">Feasibility Audit</h2>
          <p class="text-gray-500 text-sm">Tell me what's broken. I'll tell you if it can be automated.</p>
        </div>

        <div x-data="auditForm()" x-init="init()">
          <div class="w-full bg-gray-200 h-1 rounded-full mb-8 overflow-hidden" aria-hidden="true">
            <div class="bg-slate-900 h-full transition-all duration-500 ease-out" :style="'width: ' + ((step / 5) * 100) + '%'"></div>
          </div>

          <div x-show="submitted" class="mb-6 bg-green-50 border border-green-100 rounded-2xl p-6 text-center" role="status" aria-live="polite">
            <i class="ph ph-check-circle text-3xl text-green-600 mb-2" aria-hidden="true"></i>
            <p class="font-semibold text-gray-900">Analysis Request Received.</p>
            <p class="text-sm text-gray-500 mb-4">I will review your specs and email you a feasibility report shortly.</p>
            <button @click="$root.openModal($event)" class="text-sm font-semibold text-ios-blue hover:underline">
              Skip the line & Book a Call &rarr;
            </button>
          </div>

          <form
            x-show="!submitted"
            action="https://formspree.io/f/xblnwooj"
            method="POST"
            class="bg-white p-8 md:p-12 rounded-2xl border border-gray-200 shadow-xl shadow-gray-200/50 relative min-h-[420px] flex flex-col justify-between"
          >
            <input type="hidden" name="_redirect" value="https://www.logicloomsystems.com/?submitted=1#contact" />
            <input type="text" name="_gotcha" tabindex="-1" autocomplete="off" class="sr-only" />

            <div x-show="step === 1" class="space-y-6">
              <span class="text-xs font-bold text-gray-400 uppercase tracking-widest block">01 / 05</span>
              <h3 class="font-display text-2xl font-bold text-slate-900">Who are we designing for?</h3>
              <div class="space-y-4">
                <input id="name" type="text" name="name" x-model="name" placeholder="Your Name" class="w-full bg-ios-bg border-0 rounded-xl px-5 py-4 text-gray-900 focus:ring-2 focus:ring-ios-blue transition-shadow placeholder-gray-400" />
                <input id="email" type="email" name="email" x-model="email" placeholder="Work Email" class="w-full bg-ios-bg border-0 rounded-xl px-5 py-4 text-gray-900 focus:ring-2 focus:ring-ios-blue transition-shadow placeholder-gray-400" />
              </div>
            </div>

            <div x-show="step === 2" style="display:none;" class="space-y-6">
              <span class="text-xs font-bold text-gray-400 uppercase tracking-widest block">02 / 05</span>
              <h3 class="font-display text-2xl font-bold text-slate-900">Organization Context</h3>
              <div class="space-y-4">
                <input id="business" type="text" name="business" x-model="business" placeholder="Business Name & Industry" class="w-full bg-ios-bg border-0 rounded-xl px-5 py-4 text-gray-900 focus:ring-2 focus:ring-ios-blue transition-shadow placeholder-gray-400" />
