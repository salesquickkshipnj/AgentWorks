---
import "../styles/global.css";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <script src="https://unpkg.com/@phosphor-icons/web" defer></script>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <style>
      .glass-nav {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(0,0,0,0.06);
      }
      [x-cloak] { display: none !important; }
    </style>
  </head>
  
  <body class="bg-gray-50 text-slate-900 antialiased font-sans" x-data="{ mobileMenuOpen: false, modalOpen: false }">
    
    <nav class="fixed w-full z-50 top-0 transition-all duration-300 glass-nav" x-data="{ solutionsOpen: false }">
      <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
        
        <a href="/" class="flex items-center gap-3 group focus:outline-none rounded-lg p-1 z-50 relative">
            <span class="font-display font-bold text-xl text-slate-900 tracking-tight">LogicLoom</span>
        </a>

        <div class="hidden md:flex items-center space-x-1">
            
            <div class="relative" @click.outside="solutionsOpen = false">
                <button 
                    @click="solutionsOpen = !solutionsOpen"
                    class="flex items-center gap-1 text-sm font-medium text-gray-600 hover:text-black hover:bg-gray-100 px-4 py-2 rounded-full transition-all group"
                >
                    Solutions
                    <i class="ph ph-caret-down text-xs text-gray-400 group-hover:text-black transition-colors" :class="{'rotate-180': solutionsOpen}"></i>
                </button>

                <div 
                    x-show="solutionsOpen"
                    x-transition.opacity.duration.200ms
                    class="absolute top-full left-1/2 -translate-x-1/2 mt-4 w-[600px] bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden p-6 grid grid-cols-2 gap-8 z-50"
                    style="display: none;"
                >
                    <div>
                        <span class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-4 block">By Industry</span>
                        <div class="space-y-2">
                            <a href="/industries/roofing-automation" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group">
                                <div class="w-8 h-8 rounded-lg bg-orange-50 text-orange-600 flex items-center justify-center"><i class="ph ph-house-line"></i></div>
                                <div><p class="text-sm font-bold text-slate-900">Roofing & Trades</p><p class="text-xs text-gray-500">Auto-bid & missed call AI.</p></div>
                            </a>
                            <a href="/industries/dental-automation" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group">
                                <div class="w-8 h-8 rounded-lg bg-teal-50 text-teal-600 flex items-center justify-center"><i class="ph ph-tooth"></i></div>
                                <div><p class="text-sm font-bold text-slate-900">Dental Practices</p><p class="text-xs text-gray-500">Patient reactivation.</p></div>
                            </a>
                            <a href="/industries/real-estate-ai" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group">
                                <div class="w-8 h-8 rounded-lg bg-emerald-50 text-emerald-600 flex items-center justify-center"><i class="ph ph-buildings"></i></div>
                                <div><p class="text-sm font-bold text-slate-900">Real Estate</p><p class="text-xs text-gray-500">Zillow lead qualification.</p></div>
                            </a>
                            <a href="/industries/legal-automation" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group">
                                <div class="w-8 h-8 rounded-lg bg-amber-50 text-amber-600 flex items-center justify-center"><i class="ph ph-gavel"></i></div>
                                <div><p class="text-sm font-bold text-slate-900">Law Firms</p><p class="text-xs text-gray-500">Intake & document auto.</p></div>
                            </a>
                        </div>
                    </div>
                    <div>
                        <span class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-4 block">By Workflow</span>
                        <div class="space-y-2">
                             <a href="/use-cases/lead-to-crm" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group">
                                <div class="w-8 h-8 rounded-lg bg-indigo-50 text-indigo-600 flex items-center justify-center"><i class="ph ph-lightning"></i></div>
                                <div><p class="text-sm font-bold text-slate-900">Lead-to-CRM</p><p class="text-xs text-gray-500">Instant Facebook Ad sync.</p></div>
                            </a>
                            <a href="/use-cases/inbox-triage" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group">
                                <div class="w-8 h-8 rounded-lg bg-sky-50 text-sky-600 flex items-center justify-center"><i class="ph ph-envelope-open"></i></div>
                                <div><p class="text-sm font-bold text-slate-900">Inbox Triage</p><p class="text-xs text-gray-500">AI email routing.</p></div>
                            </a>
                            <a href="/use-cases/client-onboarding" class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 transition-colors group">
                                <div class="w-8 h-8 rounded-lg bg-violet-50 text-violet-600 flex items-center justify-center"><i class="ph ph-user-plus"></i></div>
                                <div><p class="text-sm font-bold text-slate-900">Client Onboarding</p><p class="text-xs text-gray-500">Contract to project setup.</p></div>
                            </a>
                        </div>
                        <div class="mt-6 pt-6 border-t border-gray-100">
                             <a href="/migrations/zapier-to-n8n" class="flex items-center gap-2 text-xs font-bold text-slate-900 hover:text-blue-600 transition-colors">
                                VIEW MIGRATION SERVICES &rarr;
                             </a>
                        </div>
                    </div>
                </div>
            </div>

            <a href="/n8n-services" class="text-sm font-medium text-gray-600 hover:text-black hover:bg-gray-100 px-4 py-2 rounded-full transition-all">n8n Experts</a>
            <a href="/migrations/zapier-to-n8n" class="text-sm font-medium text-gray-600 hover:text-black hover:bg-gray-100 px-4 py-2 rounded-full transition-all">Zapier vs n8n</a>

            <div class="pl-4">
                <button @click="modalOpen = true" class="bg-black text-white text-xs px-5 py-2.5 rounded-full font-semibold hover:bg-gray-800 transition-transform active:scale-95 shadow-lg shadow-gray-200">
                Start Project
                </button>
            </div>
        </div>

        <button @click="mobileMenuOpen = !mobileMenuOpen" class="md:hidden text-slate-900 p-2">
            <i class="ph ph-list text-2xl"></i>
        </button>
      </div>

      <div x-show="mobileMenuOpen" style="display: none;" class="absolute top-16 left-0 w-full bg-white border-b border-gray-200 p-6 md:hidden shadow-xl h-screen overflow-y-auto" @click.outside="mobileMenuOpen = false">
           <div class="space-y-6">
                <div>
                    <span class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-3 block">Industries</span>
                    <a href="/industries/roofing-automation" class="block text-lg font-semibold text-slate-900 py-2">Roofing Automation</a>
                    <a href="/industries/dental-automation" class="block text-lg font-semibold text-slate-900 py-2">Dental Practices</a>
                    <a href="/industries/legal-automation" class="block text-lg font-semibold text-slate-900 py-2">Legal Automation</a>
                </div>
                <div class="border-t border-gray-100 pt-6">
                    <span class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-3 block">Services</span>
                    <a href="/n8n-services" class="block text-lg font-semibold text-slate-900 py-2">n8n Consulting</a>
                    <a href="/migrations/zapier-to-n8n" class="block text-lg font-semibold text-blue-600 py-2">Zapier Migration</a>
                </div>
           </div>
      </div>
    </nav>

    <main>
      <slot /> 
    </main>

    <footer class="bg-white py-12 border-t border-gray-200 mt-20">
        <div class="max-w-4xl mx-auto text-center px-6">
            <p class="text-sm text-gray-500 mb-4">&copy; 2025 LogicLoom Systems.</p>
            <div class="flex justify-center gap-6 text-sm text-gray-400">
                <a href="#" class="hover:text-black">Privacy</a>
                <a href="#" class="hover:text-black">Terms</a>
            </div>
        </div>
    </footer>

    <div x-show="modalOpen" style="display:none;" class="fixed inset-0 z-[100] flex items-center justify-center px-4" x-transition.opacity>
      <div @click="modalOpen = false" class="absolute inset-0 bg-slate-900/40 backdrop-blur-sm"></div>
      
      <div class="relative bg-white w-full max-w-md rounded-2xl shadow-2xl overflow-hidden p-4 space-y-3">
        <div class="flex justify-between items-center mb-2">
            <h3 class="font-bold text-lg text-gray-900">Select Session Type</h3>
            <button @click="modalOpen = false" class="text-gray-400 hover:text-black"><i class="ph ph-x text-xl"></i></button>
        </div>
        
        <div class="w-full text-left group block p-4 rounded-xl border border-gray-200 hover:border-blue-600 hover:shadow-md transition-all bg-white cursor-pointer" onclick="openCal('15min')">
            <div class="flex justify-between items-start">
                <div><div class="flex items-center gap-2 mb-1"><span class="font-semibold text-gray-900">Discovery Call</span><span class="text-[10px] font-bold bg-green-100 text-green-700 px-2 py-0.5 rounded-full uppercase tracking-wide">Free</span></div><p class="text-sm text-gray-500">Feasibility check & intro.</p></div>
                <div class="text-right"><span class="block text-lg font-bold text-gray-900">15<span class="text-sm font-normal text-gray-500">min</span></span></div>
            </div>
        </div>

        <div class="w-full text-left group block p-4 rounded-xl border border-blue-600 bg-blue-50/30 hover:bg-blue-50 hover:shadow-md transition-all cursor-pointer relative" onclick="openCal('30min')">
            <div class="absolute -top-2.5 right-4 bg-blue-600 text-white text-[10px] font-bold px-2 py-0.5 rounded-full uppercase tracking-wide">Migration Plan</div>
            <div class="flex justify-between items-start">
                <div><div class="flex items-center gap-2 mb-1"><span class="font-semibold text-gray-900">Strategy Session</span></div><p class="text-sm text-gray-500">Workflow mapping & ROI.</p></div>
                <div class="text-right"><span class="block text-lg font-bold text-gray-900">$99</span><span class="text-xs text-gray-400">30 min</span></div>
            </div>
        </div>

        <div class="w-full text-left group block p-4 rounded-xl border border-gray-200 hover:border-blue-600 hover:shadow-md transition-all bg-white cursor-pointer" onclick="openCal('60-min-meeting')">
             <div class="flex justify-between items-start">
                <div><div class="flex items-center gap-2 mb-1"><span class="font-semibold text-gray-900">Deep Dive Audit</span></div><p class="text-sm text-gray-500">Full architecture plan.</p></div>
                <div class="text-right"><span class="block text-lg font-bold text-gray-900">$249</span><span class="text-xs text-gray-400">1 hr</span></div>
            </div>
        </div>
        
        <div class="pt-2 text-center"><p class="text-xs text-gray-400 flex items-center justify-center gap-1"><i class="ph ph-lock-key"></i> Secure payments via Stripe</p></div>
      </div>
    </div>

    <script>
      (function (C, A, L) { let p = function (a, ar) { a.q.push(ar); }; let d = C.document; C.Cal = C.Cal || function () { let cal = C.Cal; let ar = arguments; if (!cal.loaded) { cal.ns = {}; cal.q = cal.q || []; d.head.appendChild(d.createElement("script")).src = A; cal.loaded = true; } if (ar[0] === L) { const api = function () { p(api, arguments); }; const namespace = ar[1]; api.q = api.q || []; if (typeof namespace === "string") { cal.ns[namespace] = cal.ns[namespace] || api; p(cal.ns[namespace], ar); p(cal, ["initNamespace", namespace]); } else p(cal, ar); return; } p(cal, ar); }; })(window, "https://app.cal.com/embed/embed.js", "init");
      Cal("init", "15min", { origin: "https://app.cal.com" });
      Cal("init", "30min", { origin: "https://app.cal.com" });
      Cal("init", "60-min-meeting", { origin: "https://app.cal.com" });
      
      function openCal(type) {
          Cal.ns[type]("open", { calLink: `logicloomsystems-cal/${type}` });
      }
    </script>

  </body>
</html>