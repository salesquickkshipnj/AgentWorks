    <script>
      // Initialize Cal.com
      (function (C, A, L) {
        let p = function (a, ar) { a.q.push(ar); };
        let d = C.document;
        C.Cal = C.Cal || function () {
          let cal = C.Cal;
          let ar = arguments;
          if (!cal.loaded) {
            cal.ns = {};
            cal.q = cal.q || [];
            d.head.appendChild(d.createElement("script")).src = A;
            cal.loaded = true;
          }
          if (ar[0] === L) {
            const api = function () { p(api, arguments); };
            const namespace = ar[1];
            api.q = api.q || [];
            if (typeof namespace === "string") {
              cal.ns[namespace] = cal.ns[namespace] || api;
              p(cal.ns[namespace], ar);
              p(cal, ["initNamespace", namespace]);
            } else p(cal, ar);
            return;
          }
          p(cal, ar);
        };
      })(window, "https://app.cal.com/embed/embed.js", "init");

      Cal("init", "15min", { origin: "https://app.cal.com" });
      Cal("init", "30min", { origin: "https://app.cal.com" });

      const uiConfig = {
        "theme": "light",
        "cssVarsPerTheme": { "light": { "cal-brand": "#0071e3" } },
        "hideEventTypeDetails": false,
        "layout": "month_view"
      };

      Cal.ns["15min"]("ui", uiConfig);
      Cal.ns["30min"]("ui", uiConfig);

      // Global Cal Trigger
      document.addEventListener("click", function (e) {
        const target = e.target.closest("[data-cal-link]");
        if (!target) return;
        e.preventDefault();
        const link = target.getAttribute("data-cal-link");
        const namespace = target.getAttribute("data-cal-namespace");
        if (window.Cal && namespace) {
          Cal.ns[namespace]("open", { calLink: link });
        }
      });

      // Alpine Component Logic
      document.addEventListener('alpine:init', () => {
        Alpine.data('siteApp', () => ({
          modalOpen: false,
          lastFocusedEl: null,

          init() {},

          openModal(e) {
            this.lastFocusedEl = e?.currentTarget || document.activeElement;
            this.modalOpen = true;
            this.$nextTick(() => {
              const panel = this.$refs.modalPanel;
              const focusables = this.getFocusable(panel);
              if (focusables.length) focusables[0].focus();
            });
          },

          closeModal() {
            this.modalOpen = false;
            this.$nextTick(() => {
              if (this.lastFocusedEl && typeof this.lastFocusedEl.focus === 'function') {
                this.lastFocusedEl.focus();
              }
            });
          },

          getFocusable(container) {
            if (!container) return [];
            const selectors = ['a[href]', 'button:not([disabled])', 'input:not([disabled])', 'select:not([disabled])', 'textarea:not([disabled])', '[tabindex]:not([tabindex="-1"])'];
            return Array.from(container.querySelectorAll(selectors.join(','))).filter(el => el.offsetParent !== null);
          },

          trapFocus(event) {
            if (!this.modalOpen || event.key !== "Tab") return;
            const panel = this.$refs.modalPanel;
            const focusables = this.getFocusable(panel);
            if (!focusables.length) return;
            const first = focusables[0];
            const last = focusables[focusables.length - 1];

            if (event.shiftKey) {
              if (document.activeElement === first) { last.focus(); event.preventDefault(); }
              else if (!focusables.includes(document.activeElement)) { first.focus(); event.preventDefault(); }
            } else {
              if (document.activeElement === last) { first.focus(); event.preventDefault(); }
            }
          }
        }));

        Alpine.data('auditForm', () => ({
          step: 1,
          submitted: false,
          name: '', email: '', business: '', website: '', hatedTask: '', timeSpent: '', tools: '',

          init() {
            const url = new URL(window.location.href);
            this.submitted = url.searchParams.get('submitted') === '1';
          },

          isStep1Valid() { return this.name.trim().length > 1 && this.email.includes('@'); },
          isStep2Valid() { return this.business.trim().length > 2; },
          isStep3Valid() { return this.hatedTask.trim().length > 3; },
          isStep4Valid() { return this.timeSpent.trim().length > 0; },
          isStep5Valid() { return this.tools.trim().length > 2; }
        }));
      });
    </script>
