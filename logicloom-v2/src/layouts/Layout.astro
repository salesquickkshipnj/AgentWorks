---
// 1. Import the CSS
import "../styles/global.css";

// 2. DEFINE THE VARIABLES (This was the missing part causing the crash)
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <script src="https://unpkg.com/@phosphor-icons/web" defer></script>
    
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
  </head>
  
  <body class="bg-ios-bg text-ios-text antialiased font-sans" x-data="{ mobileMenuOpen: false }">
    
    <nav class="fixed w-full z-50 top-0 bg-white/80 backdrop-blur-md border-b border-gray-100 transition-all">
      <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
        
        <a href="/" class="flex items-center gap-2 group">
           <span class="font-display font-bold text-xl text-slate-900 tracking-tight">LogicLoom</span>
        </a>
        
        <div class="hidden md:flex items-center space-x-6">
             <a href="/" class="text-sm font-medium text-gray-500 hover:text-black transition-colors">Home</a>
             <a href="/migrations/zapier-to-n8n" class="text-sm font-medium text-gray-500 hover:text-black transition-colors">n8n Services</a>
             
             <div class="relative group h-16 flex items-center">
                <button class="text-sm font-medium text-gray-500 hover:text-black flex items-center gap-1">
                    Industries <i class="ph ph-caret-down"></i>
                </button>
                <div class="absolute top-16 left-0 w-56 bg-white border border-gray-100 shadow-xl rounded-xl p-2 hidden group-hover:block">
                    <a href="/industries/roofing-automation" class="block px-4 py-2 text-sm text-gray-600 hover:bg-gray-50 rounded-lg">Roofing</a>
                    <a href="/industries/legal-automation" class="block px-4 py-2 text-sm text-gray-600 hover:bg-gray-50 rounded-lg">Legal</a>
                    <a href="/industries/dental-automation" class="block px-4 py-2 text-sm text-gray-600 hover:bg-gray-50 rounded-lg">Dental</a>
                    <a href="/industries/real-estate-ai" class="block px-4 py-2 text-sm text-gray-600 hover:bg-gray-50 rounded-lg">Real Estate</a>
                </div>
             </div>
        </div>

        <button @click="mobileMenuOpen = !mobileMenuOpen" class="md:hidden text-slate-900 p-2">
            <i class="ph ph-list text-2xl"></i>
        </button>
      </div>

      <div x-show="mobileMenuOpen" style="display: none;" class="absolute top-16 left-0 w-full bg-white border-b border-gray-200 p-6 md:hidden shadow-xl" @click.outside="mobileMenuOpen = false">
           <div class="flex flex-col space-y-4">
                <a href="/" class="text-lg font-semibold text-slate-800">Home</a>
                <a href="/migrations/zapier-to-n8n" class="text-lg font-semibold text-slate-800">n8n Services</a>
                <div class="h-px bg-gray-100 my-2"></div>
                <span class="text-xs font-bold text-gray-400 uppercase">Industries</span>
                <a href="/industries/roofing-automation" class="text-base text-gray-600 pl-4 border-l-2 border-gray-100 hover:border-blue-500">Roofing</a>
                <a href="/industries/dental-automation" class="text-base text-gray-600 pl-4 border-l-2 border-gray-100 hover:border-blue-500">Dental</a>
                <a href="/industries/legal-automation" class="text-base text-gray-600 pl-4 border-l-2 border-gray-100 hover:border-blue-500">Legal</a>
                <a href="/industries/real-estate-ai" class="text-base text-gray-600 pl-4 border-l-2 border-gray-100 hover:border-blue-500">Real Estate</a>
           </div>
      </div>
    </nav>

    <main>
      <slot /> 
    </main>

    <footer class="bg-white py-12 border-t border-gray-200 mt-20">
        <div class="max-w-4xl mx-auto text-center px-6">
            <p class="text-sm text-gray-500 mb-4">&copy; 2025 LogicLoom Systems.</p>
            <div class="flex justify-center gap-6 text-sm text-gray-400">
                <a href="#" class="hover:text-black">Privacy</a>
                <a href="#" class="hover:text-black">Terms</a>
            </div>
        </div>
    </footer>

  </body>
</html>