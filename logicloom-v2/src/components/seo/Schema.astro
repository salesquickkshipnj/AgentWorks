---
interface Props {
  title: string;
  description: string;
  image?: string;
  url: string;
}

const { title, description, image, url } = Astro.props;

const schema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "LogicLoom Systems",
  "url": "https://www.logicloomsystems.com",
  "logo": "https://www.logicloomsystems.com/logo.png", // Ensure you have a logo file
  "image": image,
  "description": description,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Essex County",
    "addressRegion": "NJ",
    "addressCountry": "US"
  },
  "priceRange": "$$$",
  "telephone": "+1-917-475-6034", 
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday"
      ],
      "opens": "09:00",
      "closes": "17:00"
    }
  ],
  "sameAs": [
    "https://www.linkedin.com/company/logicloom-systems",
    "https://twitter.com/logicloom"
  ]
});
---

<script type="application/ld+json" set:html={schema} />