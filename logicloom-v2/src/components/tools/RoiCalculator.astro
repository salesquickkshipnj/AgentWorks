<div x-data="roiCalc()" class="bg-slate-900 text-white rounded-3xl p-8 md:p-12 shadow-2xl border border-slate-700">
  <div class="grid md:grid-cols-2 gap-12">
    <div class="space-y-6">
      <h3 class="font-display text-2xl font-bold">Calculate Your Waste</h3>
      
      <div>
        <label class="block text-sm text-gray-400 mb-2">Employees doing manual data entry</label>
        <input type="range" min="1" max="50" x-model="employees" class="w-full accent-blue-500">
        <div class="text-right font-mono text-xl" x-text="employees"></div>
      </div>

      <div>
        <label class="block text-sm text-gray-400 mb-2">Hours/Week wasted per person</label>
        <input type="range" min="1" max="20" x-model="hours" class="w-full accent-blue-500">
        <div class="text-right font-mono text-xl" x-text="hours + ' hrs'"></div>
      </div>

      <div>
        <label class="block text-sm text-gray-400 mb-2">Average Hourly Cost ($)</label>
        <input type="number" x-model="rate" class="w-full bg-slate-800 border-slate-700 rounded-lg text-white">
      </div>
    </div>

    <div class="flex flex-col justify-center items-center bg-slate-800/50 rounded-2xl p-8 border border-slate-700/50">
      <div class="text-sm text-gray-400 uppercase tracking-widest mb-2">Annual Cost of Inefficiency</div>
      <div class="text-5xl md:text-6xl font-bold text-red-400 mb-4" x-text="formatMoney(annualCost)"></div>
      
      <p class="text-center text-gray-400 text-sm mb-8">
        This is what manual work costs you every year. LogicLoom can automate 80% of this.
      </p>

      <button @click="$dispatch('open-modal')" class="bg-white text-slate-900 px-8 py-3 rounded-full font-bold hover:bg-gray-100 transition-all w-full">
        Stop the Bleeding
      </button>
    </div>
  </div>
</div>

<script is:inline>
  function roiCalc() {
    return {
      employees: 5,
      hours: 5,
      rate: 40,
      get annualCost() {
        return this.employees * this.hours * this.rate * 52;
      },
      formatMoney(val) {
        return new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD', maximumFractionDigits: 0 }).format(val);
      }
    }
  }
</script>