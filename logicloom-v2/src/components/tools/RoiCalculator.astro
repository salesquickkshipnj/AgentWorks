<div x-data="roiCalc()" class="bg-slate-900 text-white rounded-3xl p-8 md:p-12 shadow-2xl border border-slate-700 relative overflow-hidden">
  
  <div class="absolute top-0 right-0 w-64 h-64 bg-emerald-500/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>

  <div class="grid md:grid-cols-2 gap-12 relative z-10">
    <div class="space-y-8">
      <h3 class="font-display text-2xl font-bold">Calculate Your Waste</h3>
      
      <div>
        <label class="flex justify-between text-sm text-gray-400 mb-4">
            <span>Employees doing manual data entry</span>
            <span class="text-white font-mono" x-text="employees"></span>
        </label>
        <input type="range" min="1" max="50" x-model="employees" class="w-full accent-emerald-400 h-2 bg-slate-800 rounded-lg appearance-none cursor-pointer">
        <div class="flex justify-between text-xs text-gray-600 mt-2"><span>1</span><span>50</span></div>
      </div>

      <div>
        <label class="flex justify-between text-sm text-gray-400 mb-4">
            <span>Hours/Week wasted per person</span>
            <span class="text-white font-mono" x-text="hours + ' hrs'"></span>
        </label>
        <input type="range" min="1" max="40" x-model="hours" class="w-full accent-emerald-400 h-2 bg-slate-800 rounded-lg appearance-none cursor-pointer">
        <div class="flex justify-between text-xs text-gray-600 mt-2"><span>1 hr</span><span>40 hrs</span></div>
      </div>

      <div>
        <label class="block text-sm text-gray-400 mb-2">Average Hourly Cost ($)</label>
        <input type="number" x-model="rate" class="w-full bg-slate-800 border-slate-700 rounded-lg text-white px-4 py-3 focus:ring-2 focus:ring-emerald-500 outline-none">
      </div>
    </div>

    <div class="flex flex-col justify-center items-center bg-slate-800/50 rounded-2xl p-8 border border-slate-700/50">
      <div class="text-xs text-gray-400 uppercase tracking-widest mb-2 font-bold">Annual Cost of Inefficiency</div>
      <div class="text-5xl md:text-6xl font-bold text-emerald-400 mb-4 font-display" x-text="formatMoney(annualCost)"></div>
      
      <p class="text-center text-gray-400 text-sm mb-8 leading-relaxed">
        This is what manual work costs you every year. LogicLoom can automate 80% of this.
      </p>

      <button @click="$dispatch('open-modal')" class="bg-white text-slate-900 px-8 py-4 rounded-full font-bold hover:bg-gray-100 transition-all w-full shadow-lg active:scale-95 cursor-pointer">
        Stop the Bleeding
      </button>
    </div>
  </div>
</div>

<script is:inline>
  function roiCalc() {
    return {
      employees: 5,
      hours: 5,
      rate: 40,
      get annualCost() {
        return this.employees * this.hours * this.rate * 52;
      },
      formatMoney(val) {
        return new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD', maximumFractionDigits: 0 }).format(val);
      }
    }
  }
</script>
