---
import Layout from '../../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout 
  title="Submission Received | LogicLoom" 
  description="Your audit request has been confirmed."
  showStickyBar={false}
>
  <div class="min-h-screen flex items-center justify-center bg-slate-50 px-6">
    <div class="max-w-md w-full text-center">
      
      <div class="mx-auto w-24 h-24 bg-green-50 rounded-full flex items-center justify-center mb-8 relative">
        <div class="absolute inset-0 border-4 border-green-100 rounded-full animate-ping opacity-75"></div>
        <Icon name="ph:check-bold" class="w-10 h-10 text-green-600 relative z-10" />
      </div>

      <h1 class="font-display text-3xl font-bold text-slate-900 mb-4">
        Message Received
      </h1>
      
      <p class="text-slate-600 mb-10 leading-relaxed text-lg">
        Thanks for sending that over. I'm reviewing your details now and will email you a feasibility report shortly.
      </p>

      <a 
        href="/" 
        class="inline-flex items-center justify-center px-8 py-3.5 text-base font-bold rounded-full text-white bg-slate-900 hover:bg-slate-800 transition-all shadow-lg hover:shadow-xl active:scale-95"
      >
        Return to Dashboard
      </a>
      
      <div class="mt-12 pt-8 border-t border-gray-200">
         <p class="text-xs text-gray-400 uppercase tracking-widest font-bold">
            Status: Engineering Review Queued
         </p>
      </div>

    </div>
  </div>
</Layout>