---
// src/pages/case-studies.astro
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const studies = await getCollection('case-studies');
---

<Layout title="Case Studies | LogicLoom" description="Real results from our automation architectures.">
  <section class="py-32 px-6 max-w-6xl mx-auto">
    <h1 class="font-display text-5xl font-bold mb-16 text-center">Engineering Outcomes.</h1>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {studies.map(study => (
        <a href={`/case-studies/${study.slug}`} class="group block bg-gray-50 rounded-3xl p-8 hover:bg-white border border-gray-100 hover:shadow-xl transition-all">
          <div class="text-xs font-bold uppercase tracking-widest text-blue-600 mb-4">{study.data.industry}</div>
          <h3 class="font-display text-2xl font-bold mb-2 group-hover:text-blue-600 transition-colors">{study.data.title}</h3>
          <div class="mt-6 flex items-center gap-2 text-gray-500 font-mono text-sm">
             <i class="ph ph-trend-up text-green-500"></i> {study.data.metric}
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>