---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Engineering Blog | LogicLoom" description="Technical deep dives into automation architecture.">
  <section class="py-32 px-6 max-w-6xl mx-auto">
    <h1 class="font-display text-5xl font-bold mb-16 text-center">Engineering Log</h1>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}/`} class="group block">
          <div class="bg-gray-100 rounded-2xl h-48 mb-4"></div> <h3 class="font-display text-xl font-bold mb-2 group-hover:text-blue-600 transition-colors">
            {post.data.title}
          </h3>
          <p class="text-gray-500 text-sm mb-4 line-clamp-2">
            {post.data.description}
          </p>
          <span class="text-xs font-mono bg-gray-100 px-2 py-1 rounded">
            {post.data.pubDate.toLocaleDateString()}
          </span>
        </a>
      ))}
    </div>
  </section>
</Layout>